---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css'
import { ViewTransitions } from "astro:transitions";
const { pageTitle } = Astro.props;
---

<html lang="en" class="font-serif" >
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Montserrat:wght@500;700&display=swap" >
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Montserrat:wght@500;700&display=swap" media="print" onload="this.media='all'" >
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title> Aniruddha's Blogs | {pageTitle} </title>
		<meta name="title" content={pageTitle} />
		<meta property="og:url" content="https://main--relaxed-tiramisu-83960a.netlify.app/" />
		<meta property="og:image" content="/favicon.svg" />
		<meta property="og:description" content="Checkout all the blogs of Aniruddha. Themes include travel, movies and software engineering."/>
		<meta name="twitter:card" content="summary"/>
		<meta name="twitter:title" content="Aniruddha Surse Blogs"/>
		<meta name="twitter:site" content="@Anirudd52146245"/>
		<meta name="twitter:description" content="Checkout all the blogs of Aniruddha. Themes include travel, movies and software engineering."/>
		<meta name="twitter:image" content="/aniruddha_twitter.jpg"/>
		<script is:inline>
			localStorage.theme === 'dark' ? document.documentElement.classList.add("dark") : document.documentElement.classList.add("light");
		</script>
		<noscript>
		  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&family=Montserrat:wght@500;700&display=swap" />
		</noscript>
		<ViewTransitions></ViewTransitions>
	</head>
	<body class=" mt-0 px-4 sm:px-8 md:px-16  lg:px-32 bg-white relative dark:bg-[#0d0f14] transition-all duration-300 text-gray-800 dark:text-white font-montserrat flex flex-col justify-between min-h-screen overflow-x-hidden">
	  <article itemscope itemtype="http://schema.org/Article">
		<Header></Header>
		<div class="flex-grow">
			<slot/>
		</div>
	  </article>
		<Footer></Footer>
	</body>
</html>