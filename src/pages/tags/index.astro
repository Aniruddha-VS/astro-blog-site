---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostHeading from '../../components/BlogPostHeading.astro';
const pageHeading = "Tags"
const allPosts = await Astro.glob('../posts/*.mdx');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "Tag Index";
---
<div class="flex flex-col font-lora pt-4 md:pt-8 max-w-3xl mx-auto text-lg md:text-xl md:leading-8">
  <BlogPostHeading title={pageHeading}/>
  <div class="tags">
    {tags.map((tag) => (
      <p><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
</div>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>